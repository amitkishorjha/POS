
@{
    ViewBag.Title = "GetUserRoles";
}

<h2 class="page-title">
    <i class="glyphicon glyphicon-briefcase"></i>  Role Selection
</h2>
<hr />
<h4 style="color:red">Please select your role to enter the application</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div style="box-shadow:1px 1px 2px 1px #b4a1d8;border: 1px solid white;border-radius: 1% 1%;">
            <div class="form-group">
                @Html.Label("Role", "Select Role", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.DropDownList("RoleId", new SelectList(ViewBag.Roles, "UniqueId", "Name"), "-- select Role --", new { @class = "form-control", @required = "required" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-3">
                    <button type="submit" value="Create" class="btn btn-block btn-primary btn-sm btn-shadow">
                        Go <i class="fa fa-hand-o-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>


}
